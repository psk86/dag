<h1>Listing Household Members</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @household_members.each do |household_member| %>
      <tr>
        <td><%= link_to 'Show', household_member %></td>
        <td><%= link_to 'Edit', edit_household_member_path(household_member) %></td>
        <td><%= link_to 'Destroy', household_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

